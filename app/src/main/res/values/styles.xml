<resources>

    <!-- Base application theme. -->
    <!--<style name="app_style" parent="Theme.AppCompat.Light.NoActionBar"/>-->
    <style name="app_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--第三方字体的引用-->
        <item name="textFieldStyle">@style/TextField</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:Theme.Material.Light" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="base_tint">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:elevation">5dp</item>-->
    </style>

    <style name="main_textview">
        <item name="android:background">@drawable/bac_btn</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
    </style>


    <!--加载提示-->
    <declare-styleable name="CircularProgressBar">
        <attr name="cpbStyle" format="reference"/>
        <attr name="cpb_color" format="color"/>
        <attr name="cpb_stroke_width" format="dimension"/>
        <attr name="cpb_min_sweep_angle" format="integer"/>
        <attr name="cpb_max_sweep_angle" format="integer"/>
        <attr name="cpb_sweep_speed" format="float"/>
        <attr name="cpb_rotation_speed" format="float"/>
    </declare-styleable>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <!-- Base application theme. -->
    <style name="StatusBarAppTheme" parent="@style/BaseAppTheme"/>

    <!--自定义字体样式和继承关系-->
    <style name="TextField" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/qiaoqiao.ttf</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
</resources>
