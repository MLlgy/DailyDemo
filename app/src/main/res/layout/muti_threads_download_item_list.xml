<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/downloader_file_activiey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/tv_muti_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/down_show_text"
        android:textSize="20dp" />
    <ProgressBar
        android:id="@+id/muti_pb_show"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/tv_muti_show"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_muti_down_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bac_btn"
        android:paddingBottom="8dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:text="开始"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/tv_muti_down_stop"
        android:layout_alignBottom="@+id/tv_muti_down_stop"
        android:layout_toStartOf="@+id/tv_muti_down_stop" />

    <TextView
        android:id="@+id/tv_muti_down_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="11dp"
        android:background="@drawable/bac_btn"
        android:paddingBottom="8dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:text="停止"
        android:textSize="18dp"
        android:layout_below="@+id/muti_pb_show"
        android:layout_alignParentEnd="true" />
</RelativeLayout>