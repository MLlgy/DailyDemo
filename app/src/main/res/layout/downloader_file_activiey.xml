<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/downloader_file_activiey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidwebviewdemo.mddemo.serverdownfile.DownloaderFileActiviey">

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/down_show_text"
        android:textSize="20dp" />
    <ProgressBar
        android:id="@+id/pb_show"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/tv_show"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_down_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pb_show"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bac_btn"
        android:paddingBottom="8dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:text="停止"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_down_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_down_stop"
        android:layout_marginEnd="20dp"
        android:layout_toLeftOf="@id/tv_down_stop"
        android:background="@drawable/bac_btn"
        android:paddingBottom="8dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="8dp"
        android:text="开始"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/tv_checker"
        android:text="是否有文件"
        android:padding="20dp"
        android:background="@drawable/bac_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/tv_delete"
        android:padding="20dp"
        android:background="@drawable/bac_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="删除文件"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_show_file"
        android:background="@color/colorAccent"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/tv_delete"
        android:layout_marginEnd="20dp" />


</RelativeLayout>
